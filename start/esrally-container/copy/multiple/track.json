{% set index_count = 4 %}
{
  "version": 2,
  "description": "Desc of a track.",
  "indices": [
    {% set comma = joiner() %}
    {% for item in range(index_count) %}
    {{ comma() }}
      {
        "name": "nasa-{{ '{:03d}'.format(item) }}",
        "body": "index.json",
        "types": [ "docs" ]
      }
    {% endfor %}
  ],
  "corpora": [
    {
      "name": "nasa-logs-small",
      "documents": [
        {
          "source-file": "data-nasa-logs-10all.json",
          "includes-action-and-meta-data": true,
          "document-count": 700000
        }
      ]
    }
  ],
  "schedule": [
    {
      "operation": {
        "operation-type": "delete-index"
      }
    },
    {
      "operation": {
        "operation-type": "create-index"
      }
    },
    {
      "operation": {
        "operation-type": "cluster-health",
        "request-params": {
          "wait_for_status": "green"
        }
      }
    },
    {
      "operation": {
        "operation-type": "raw-request",
        "method": "PUT",
        "path": "/_cluster/settings",
        "header": "Content-Type: application/json",
        "body": {"persistent": {"indices.recovery.max_bytes_per_sec" : "40mb"}}
      }
    },
    {
      "operation": {
        "operation-type": "bulk",
        "bulk-size": 1000
      }
    }
  ]
}
